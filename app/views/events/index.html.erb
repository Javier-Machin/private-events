<div class="Past_events">
  <h2>Past events:</h2>
  <% @past_events.each do |event| %>
    <h3><%= event.name %></h3>
    <p><%=  event.description %></p>
  <% end %>
</div>
<div class="Future_events">
  <h2>Future events:</h2>
  <% @future_events.each do |event| %>
    <h3><%= event.name %></h3>
    <p><%=  event.description %></p>
  <% end %>
</div>