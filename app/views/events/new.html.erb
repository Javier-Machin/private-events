<%= image_tag "dashboard1.jpg", class: "Image_dashboard" %>
<div class="Event_container">
  <h1>New Event</h1>
  <div class="Event_form">
    <%= form_for(@event) do |f| %>
      <h2><%= f.label :name, 'Event name: ' %></h2>
      <%= f.text_field :name %>
      <h2><%= f.label :description, 'Event description: ' %></h2> 
      <%= f.text_area :description, size: "20x6" %>
      <h2><%= f.label :date, 'Event date: ' %></h2>
      <%= f.date_field :date, min: Date.today %> 
      <h2><%= f.submit "Submit", class: "Submit_button" %></h2>
    <% end %>
  </div>
  <ul>
    <% @event.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
</div>