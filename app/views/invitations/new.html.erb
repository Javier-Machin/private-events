<%= image_tag "dashboard1.jpg", class: "Image_dashboard" %>
<div class="Invitation_container">
  <h1>Invite user</h1>
  <div class="Invitation_form">
    <%= form_for @invitation do |f| %>
      <h2><%= f.label :event, 'Event: ' %></h2>
      <%= f.collection_select :event, Event.where("creator_id = ?", @current_user.id), :id, :name, class: "Form_select" %>
      <h2><%= f.label :invited_user, 'Invitation for: ' %></h2>
      <%= f.text_field :invited_user %>
      <h2><%= f.submit "Submit", class: "Submit_button" %></h2>
    <% end %>
  </div>
</div>