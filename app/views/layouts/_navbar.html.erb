<div class="Navbar">
  <span class="navbar-title">Social Boost</span> 
  <% if current_user.nil? %>
    <nav class="navbar-links">
      <a href="<%= root_path %>">Home</a> 
      <a href="<%= login_path %>">Login</a>
      <a href="<%= signup_path %>">Sign up</a>
    </nav>
  <% else %>
    
    <nav class="navbar-links">     
      <a href="<%= new_invitation_path %>" class="invitation-link">Invite Users</a>
      <span id="Profile_link"><%= link_to "Dashboard", dashboard_path %></span>
      <span id="Pending_link"><%= link_to "Invitations", pending_path %></span>
      <span id="Current_user">Logged as: <%= current_user.name %></span>
      <span id="Logout_link"><%= link_to "Log out", logout_path, method: :delete %></span>
    </nav>
  <% end %>
</div>