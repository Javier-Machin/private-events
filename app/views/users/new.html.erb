<div class="Signup_container">
  <div class="Signup_form">
    <%= image_tag "login1.jpg", class: "Image_login" %>
    <%= form_for @user do |f| %>
      <h2><%= f.label :name, 'Username' %></h2>
      <%= f.text_field :name %>
      <h2><%= f.label :email, 'Email' %></h2> 
      <%= f.text_field :email %>
      <h2><%= f.submit "Sing up", class: "Submit_button" %></h2>
    <% end %>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
</div>